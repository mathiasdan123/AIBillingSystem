# Database connection string (required)
# For Neon serverless: postgres://user:password@hostname/database?sslmode=require
DATABASE_URL=

# Optional: Payer credential encryption key (64-char hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PAYER_CREDENTIAL_ENCRYPTION_KEY=

# Optional: Email service configuration
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Optional: Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
